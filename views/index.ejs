<div class="layui-col-md9">
  <table class="layui-table " lay-skin="nob">
    
    <colgroup>
      <col width="150">
      <col width="200">
      <col>
    </colgroup>
    <thead>
      <tr>
        <th>用户</th>
        <th>发布时间</th>
        <th>内容</th>
        <th>操作</th>
        <th></th>
      </tr> 
    </thead>
    <tbody>

  <% data.blogList.map(item=>{

  %>
<tr>
  <td><%= item.title%></td>
  <td><%= item.datetime%></td>
  <td><%- item.content%></td>
  <td><a href="http://www.layui.com" class="layui-btn layui-btn layui-btn-xs">删除</a> </td>
  <td> <a href="http://www.layui.com" class="layui-btn layui-btn layui-btn-xs">修改</a></td>

</tr>   
  <%  }) %>
</tbody>
</table>
</div>
<!-- 中部end -->

<!-- 分页 -->
<div class="page w1100">

  <% for(let i = 1;i <= data.pagesTotle;i++){ %>

  <a href="/?page=<%=i%>" class="<%- data.currPage==i?'active':''%>">
    <%= i %>
  </a>
  <% } %>

</div>
<style>
  .w1100{
    float: right;
    width: 300px;
  }
  
  .w1100 a{
border:solid 1px #DDDDDD;
margin-right:2px;
}
.w1100 .active{
font-weight:bold;
display:block;
float:left;
padding:4px 6px;
}
.w1100 a:link,
.w1100 a:visited {
color:#009688;
display:block;
float:left;
padding:3px 6px;
text-decoration:none;
}
.w1100 a:hover{
border:solid 1px #666666;
}
</style>
<!-- 分页end -->
</html>








